<h2> Add a New Movie</h2>
<form action="/movies" method="POST">
  <label for="movie-title">Title:</label>
  <input type="text" name="title" id="movie-title">

  <label for="movie-genre">Genre:</label>
  <input type="text" name="genre" id="movie-genre">

  <label for="movie-plot">Plot:</label>
  <input type="text" name="plot" id="movie-plot">

  <h2>Cast and Crew</h2>
  {{#each celebrities}}
  <div>
    <input type="checkbox" name="cast" value="{{this._id}}">{{this.name}}
  </div>
  {{/each}}

  <input type="submit" value="save" >
</form>